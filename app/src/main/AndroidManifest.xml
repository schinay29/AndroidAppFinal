<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.hannah.hannahapp">

    <!-- especificando permiso para usar la API de reconocimiento de actividad -->
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HannahApp">

        <activity
            android:name=".activity_profile"
            android:exported="true" />
        <activity
            android:name=".activity_carInfo"
            android:exported="true" />
        <activity
            android:name=".activity_addCar"
            android:exported="true" />
        <activity
            android:name=".Pop_up"
            android:exported="false"
            android:theme="@style/Theme.HannahApp.TemaPopup" />
        <activity
            android:name=".activity_home"
            android:exported="false" />
        <activity
            android:name=".activity_register"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>